<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_shortAnimTime"
    android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/accentPurple" />
            <corners android:radius="25dp" />
            <solid android:color="@color/accentPurple" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/accentPurpleHalfOpacity" />
            <corners android:radius="25dp" />
            <solid android:color="@color/accentPurpleHalfOpacity" />
        </shape>
    </item>

</selector>